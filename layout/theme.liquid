<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta content="width=device-width,initial-scale=1,shrink-to-fit=no" name="viewport">
    {{ content_for_header }}
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link crossorigin href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css2?family=Karla:wght@300;400;600&display=swap" rel="stylesheet">
    {{ 'application.css' | asset_url | stylesheet_tag }}
    <script crossorigin="anonymous" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" src="//code.jquery.com/jquery-3.6.0.min.js"></script>
    {{ 'application.js' | asset_url | script_tag }}
  </head>
  <body>

    {% include 'header' %}

    <main role="main">
      {{ content_for_layout }}

      {% include 'footer' %}
    </main>

    {% if template != 'cart' %}
      {% include 'mini-cart' %}
    {% endif %}

  </body>
</html>
